	<select id="getList" resultType="org.zerock.domain.FreeBoardVO">
<![CDATA[
		select * from FreeBoard where no > 0
]]>

	</select>
	<insert id="insertSelectKey">
		<selectKey keyProperty="no" order="BEFORE" resultType="long">
			select seq_freeboard.nextval FROM dual
		</selectKey>

		INSERT INTO FreeBoard (no ,title, content, member_no)
		VALUES (#{no},
		#{title}, #{content}, #{member_no} )

	</insert>
	<select id="get" resultType="org.zerock.domain.FreeBoardVO">
		select * from FreeBoard where no =
		#{no}
	</select>
	<delete id="delete">
		delete from FreeBoard where no = #{no}
	</delete>
	<update id="update">
		UPDATE FreeBoard
		SET
		title = #{title},
		content =
		#{content},
		member_no = #{member_no}
		WHERE
		no = #{no}
	</update>

